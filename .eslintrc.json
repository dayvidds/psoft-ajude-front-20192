{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": "error",
    "class-methods-use-this": 0,
    "no-restricted-globals": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "indent": 0,
    "max-len": 0,
    "comma-dangle": 0,
    "no-alert": 0
  }
}
